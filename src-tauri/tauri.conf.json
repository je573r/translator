{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "translator-rt",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "src"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "launcher",
        "overlay"
      ]
    },
    "windows": [
      {
        "label": "launcher",
        "title": "Speech Translator",
        "width": 520,
        "height": 360,
        "resizable": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "url": "launcher.html"
      },
      {
        "label": "overlay",
        "title": "Overlay",
        "width": 700,
        "height": 220,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "shadow": false,
        "resizable": false,
        "visible": false,
        "url": "index.html"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}